{% extends 'baseFo.html.twig' %}

{% block body %}
<main>
    <article>
        <section class="intro-contact">
            <p>Une question ?</p>
            <br>
            <p>Un problème ?</p>
            <br>
            <p>Autre ?</p>
            <br>
            <h3><span>Contactez-moi ?</span></h3>
        </section>
    </article>
    <form method="POST" class="form-contact">

        <div class="content-contact">
            <div class="contact-column">
                <label class="name" for="nom">Nom :</label>
                <input type="text" id="nom" name="nom" />
            </div>
            <div class="contact-column">
                <label for="pseudo">*Prénom/Pseudo :</label>
                <input type="text" id="pseudo" name="pseudo" required />
            </div>
            <div class="contact-column">
                <label for="email">*Adresse mail :</label>
                <input type="email" id="email" name="email" required />
            </div>
            <div class="message">
                <label for="message">*Message :</label>
                <textarea id="contact-message" name="message" required></textarea>
            </div>
            <div class="btn-contact">
                <button class="btn-send" type="submit">Envoyer mon message </button>
            </div>
            <p class="champ">*champs obligatoires</p>
        </div>
    </form>
</main>
{% endblock %}
