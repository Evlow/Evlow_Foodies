
{% extends 'baseFo.html.twig' %}

{% block body %}
<main>
    <article>
        <section class="intro-connect">
            <div class="p-intro">
            <p>Partager tes recettes ?
            </p>
             <p>Retrouver tes recettes favories ?</p>
            </div>
            <h3><span>Connecte-toi !</span></h3>
        </section>
    </article>

    <form action="{{path('app_bo_recipes_add')}}" method="POST" class="form-connect">
        <div class="content-connect">
        <div class="connect-column">
            <label for="username">Identifiant:</label>
            <input type="text" id="username" name="_username" required />
            <div class="lost-connect">
            <a href="#">Identifiant perdu ?</a>
            </div>
        </div>
        <div class="connect-column">
            <label for="password">Mot de passe :</label>
            <input type="password" id="password" name="_password" required />
            <div class="lost-connect">
            <a href="#">Mot de passe perdu ?</a>
            </div>
        </div>
        <div class="btn-connexion">
            <button class="btn-connect" type="submit">Se connecter </button>
        </div>
        </div>
    </form>
</main>
{% endblock %}
