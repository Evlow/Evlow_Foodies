{% extends '/bases/baseFo.html.twig' %}

{% block title %}
Régimes spécifiques | Evlow Foodies |
{% endblock %}

{% block body %}
 <!--INTRODUCTION-->
 <div class="content-intro-specific">
     <div class="paragraphe-specific">
         <p>Les régimes spécifiques</p>
     </div>
 </div>
 <div class="carts">
    <section class="content-card">
        {% for recipe in recipes %}
        <article class="card"> 
            <img class="recipe-img-home" src="{{vich_uploader_asset(recipe, 'imageFile')}}" alt="image">
            <h3 class="recipes-h3">{{recipe.title}}</h3>
            <p>{{recipe.description}}</p>
            <a class="btn-recipe" href="{{ path('app_fo_recipe_sheet', { id: recipe.id }) }}">Voir la recette</a>

            <div>
                <i class="far fa-heart"></i>
               </div>
        </article>
        {% endfor %}
    </section>   
</div>
{% endblock %}
