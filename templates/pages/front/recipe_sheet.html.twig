{% extends '/bases/baseFo.html.twig' %}

{% block body %}
<main>
    {% for recipe in recipes %}
    <div class="content-intro-recipe-sheet">
        <div class="paragraphe-recipe-sheet">
            <p>{{recipe.title}}</p>
        </div>
        <div class="content-img-sheet">
        <img class="recipe-sheet-img" src="{{vich_uploader_asset(recipe, 'imageFile')}}" alt="image">
    </div>
        <p>{{recipe.description}}</p>
    </div>
    <article>
        <div class="content-articles">
            <section class="section-ingredients">
                <div class="bloc-title">
                    <div class="ovale">
                        <h3 class="title-flex"><img class="ingredients" src="{{ asset('assets/picture/ingredient.svg') }}"
                                alt="image ingrédients" />Ingédients
                        </h3>
                    </div>
                </div>
                <ul>
                    <li>{{recipe.ingredient1}}</li>
                    <li>{{recipe.ingredient2}}</li>
                    <li>{{recipe.ingredient3}}</li>
                    <li>{{recipe.ingredient4}}</li>
                    <li>{{recipe.ingredient5}}</li>
                    <li>{{recipe.ingredient6}}</li>
                    <li>{{recipe.ingredient7}}</li>
                    <li>{{recipe.ingredient8}}</li>

                </ul>
            </section>

            <section class="section-preparations">
                <div class="bloc-title">
                    <div class="ovale">
                        <h3 class="title-flex"><img class="preparations" src="{{ asset('assets/picture/preparation.svg') }}"
                                alt="image préparation" />Préparations
                        </h3>
                    </div>
                </div>
                <ul>
                    <li>{{recipe.preparation1}}</li>
                    <li>{{recipe.preparation2}}</li>
                    <li>{{recipe.preparation3}}</li>
                    <li>{{recipe.preparation4}}</li>
                    <li>{{recipe.preparation5}}</li>
                </ul>
            </section>
            {% endfor %}
        </div>
    </article>
</main>


{% endblock %}