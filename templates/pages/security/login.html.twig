{% extends '/bases/baseFo.html.twig' %}
    
{% block title %}Connexion | Evlow Foodies{% endblock %}

{% block body %}
    {% if error %}
        <div class="error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
   
    <form method="post" class="form-connect">
        <div class="content-connect">
        <div class="form-connect">
        <label for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
    
    <label for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
    <button class="btn btn-lg btn-primary" type="submit">
        Se connecter
    </button>
</div>
</s>
</form>

{% endblock %}
