{% extends '/bases/baseFo.html.twig' %}

{% block title %}Connexion | Evlow Foodies{% endblock %}

{% block body %}
{% if error %}
<div class="error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

{% if app.user %}
<div>
    Vous êtes connecté(e) comme {{ app.user.UserIdentifier }}.
</div>
{% endif %}

<article class="article-connect">
    <section class="section-connect">
        <p class="p-registration">Envie de partager vos recettes ?</p>
        <p class="p-registration">De retrouver vos recettes coup de coeur ?</p>
        <h3 class="home-h3 ">
            <span>Connectez-vous !</span>
        </h3>
    </section>
    <form method="post">
        <div class="content-connect">
            <div class="form-connect">
                <div class="bloc-email-connect">
                    <input type="email" value="{{ last_username}}" placeholder="Votre email" name="email"
                        id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                    <a href=""><span class="span-email-lost">Identifiant oublié ?</span></a>
                </div>

                <div class="bloc-password-connect">
                    <input type="password" placeholder="Mot de passe" name="password" id="inputPassword"
                        class="form-control" autocomplete="current-password" required>
                    <a href="{{ path('app_forgot_password_request') }}"><span class="span-email-lost">Mot de passe
                            oublié ?</span></a>

                </div>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        </div>
        <div class="bloc-input">
            <button class="button-connect" type="submit">
                Se connecter
            </button>
        </div>
    </form>
  
</article>

{% endblock %}